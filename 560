class Solution {
public:
    int subarraySum(vector<int>& nums, int k) {
        int count = 0, sum = 0;
        unordered_map<int, int> um;
        um[0] = 1;
        
        for(auto x: nums) {
            sum += x;
            if(um[sum - k] > 0) count += um[sum - k];
            um[sum]++;
        }
        
        return count;
    }
};
