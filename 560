// TC O(N), SC O(N)

class Solution {
public:
    int subarraySum(vector<int>& nums, int k) {
        unordered_map<int, int> runningSumCount;
        runningSumCount[0] = 1;
        int runningSum = 0, subArrayCount = 0;
        
        for(int i = 0; i < nums.size(); i++) {
            runningSum += nums[i];
            
            if(runningSumCount[runningSum - k] > 0) 
                subArrayCount += runningSumCount[runningSum - k];
            
            runningSumCount[runningSum]++;
        }
        return subArrayCount;
    }
};
