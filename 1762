class Solution {
public:
    vector<int> findBuildings(vector<int>& heights) {
        vector<int> result;
        
        for(int i = 0; i < heights.size(); i++) {
            if(!result.size()) result.push_back(i);
            else {
                // current building is taller than the last building, pop and keep popping
                if(heights[i] >= heights[result.back()]) 
                    for(int j = result.size() - 1; j >= 0; j--) 
                        if(heights[i] >= heights[result.back()]) result.pop_back();
                    
                // current building is smaller than the last one || there is no element in the stack
                result.push_back(i);
            }
        }
        return result;
    }
};
