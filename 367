class Solution {
public:
    bool isPerfectSquare(int num) {
        if(num == 0 || num == 1) return true;
        
        long long int low = 0, high = num / 2;
        
        while(low <= high) {
            long long int mid = (high + low) / 2;
            
            if(mid * mid < num) low = mid + 1;
            else if(mid * mid > num) high = mid - 1;
            else return true;
        }
        
        return false;
    }
};
