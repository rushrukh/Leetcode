// TC O(N), SC O(N)

class Solution {
public:
    TreeNode* invertTree(TreeNode* root) {
        invert(root);
        return root;
    }
    
    void invert(TreeNode *root) {
        if(!root) return;
        
        swap(root -> left, root -> right);
        invert(root -> left);
        invert(root -> right);
    }
};
