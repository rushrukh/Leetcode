// TC O(N), SC O(1)

class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        if(!head) return head;
        
        ListNode* prev = NULL;
        ListNode* curr = head;
        ListNode* next = head -> next;
        
        while(curr) {
            curr -> next = prev;
            prev = curr;
            curr = next;
            next = curr ? curr -> next : NULL;
        }
        
        return prev;
    }
};
