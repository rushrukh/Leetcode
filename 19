// TC O(N), SC O(1)

class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        int count = 0;
        ListNode* tmp = head;
        
        while(tmp) {
            count++;
            tmp = tmp -> next;
        }
        
        count = count - n + 1;
        int tCount = 0;
        
        ListNode* prev = NULL;
        tmp = head;
        
        while(tmp) {
            tCount++;
            
            if(tCount == count) {
                if(prev) prev -> next = tmp -> next;
                else head = tmp -> next;
                break;
            }
            
            prev = tmp;
            tmp = tmp -> next;
        }
        
        return head;
    }
};
