// TC O(M*N), SC O(1)
class Solution {
public:
    bool isToeplitzMatrix(vector<vector<int>>& matrix) {
        for(int i = 1; i < matrix.size(); i++) 
            for(int j = 1; j < matrix[i].size(); j++)
                if(matrix[i][j] != matrix[i - 1][j - 1]) 
                    return false;
        
        return true;
    }
};

// Follow-up 1: only one row of matrix can be loaded into memory
