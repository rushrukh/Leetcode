// TC O(N), SC O(1)

class Solution {
public:
    ListNode* middleNode(ListNode* head) {
        int count = 0;
        ListNode* tmp = head;
        
        while(tmp) {
            count++;
            tmp = tmp -> next;            
        }
        
        for(int i = 0; i < count / 2; i++) head = head -> next;
        
        return head;
    }
};
