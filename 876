// TC O(N), SC O(1)

class Solution {
public:
    ListNode* middleNode(ListNode* head) {
        int count = 0, i = 0;
        ListNode* tmp = head;
        
        while(tmp) {
            count++;
            tmp = tmp -> next;
        }
        
        count /= 2;
        
        while(i < count) {
            head = head -> next;
            i++;
        }
        
        return head;
    }
};
