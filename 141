class Solution {
public:
    bool hasCycle(ListNode *head) {
        
        ListNode* fast = head, *slow = head;
        
        while(fast) {
            slow = slow -> next;
            if(!fast -> next) break;
            fast = fast -> next -> next;
            if(slow == fast) return true;
        }
        
        return false;
    }
};
