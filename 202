class Solution {
public:
    bool isHappy(int n) {
        int sum = 0;
        
        while(n) {
            sum += (n % 10) * (n % 10);
            n /= 10;
            
            if(n == 0 && (sum / 10 != 0)) {
                n = sum;
                sum = 0;
            }
        }
        
        return (sum == 1 || sum == 7) ? true : false;
    }
};
