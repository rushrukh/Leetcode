class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        // we will keep track of the globalMax
        // during each iteration, we will consider two things
        // Adding the current element to the previous max vs current element itself, who is max?
        
        int globalMax = INT_MIN;
        int localMax = 0;
        
        for(int &num: nums) {
            localMax = max(num, num + localMax);
            globalMax = max(globalMax, localMax);
        }
        
        return globalMax;
    }
};
