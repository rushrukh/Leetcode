class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        if(nums.size() == 1) return nums[0];
        
        int globalMax = nums[0], localMax = nums[0];
        
        for(int i = 1; i < nums.size(); i++) {
            localMax = max(nums[i], nums[i] + localMax);
            globalMax = max(globalMax, localMax);
        }
        
        return globalMax;
    }
};
