// TC O(N), SC O(1)

class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        // we will keep track of the globalMax
        // during each iteration, we will consider two things
        // Adding the current element to the previous max vs current element itself, who is max?
        
        int currMax = 0, globMax = INT_MIN;
        
        for(int &num: nums) {
            currMax = max(currMax + num, num);
            globMax = max(currMax, globMax);
        }
        
        return globMax;
    }
};
