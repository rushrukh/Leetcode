// TC O(N), SC O(1)
class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int curr_sum = 0, global_sum = INT_MIN;
        
        for(auto &num:nums) {
            curr_sum = max(curr_sum + num, num);
            global_sum = max(global_sum, curr_sum);
        }
        
        return global_sum;
    }
};
