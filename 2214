// TC O(N), SC O(1)

class Solution {
public:
    long long minimumHealth(vector<int>& damage, int armor) {
        int max_damage = 0;
        long long min_health = 0;
        
        for(int &d: damage) {
            max_damage = max(max_damage, d);
            min_health += d;
        }
        
        min_health -= min(max_damage, armor);
        
        return min_health + 1;
    }
};
