// TC O(N^2), SC O(1)

class Solution {
public:
    int minMovesToMakePalindrome(string s) {
        int left = 0, right = s.size() - 1, count = 0;
        
        while(left <= right) {
            if(s[left] == s[right]) {
                left++;
                right--;
                continue;
            }
            else {
                int i = left, j = right;
                
                while(s[j] != s[left])
                    j--;
                
                while(s[i] != s[right])
                    i++;
                
                if(i - left < right - j) {
                    for(int k = i; k > left; k--) {
                        count++;
                        swap(s[k], s[k - 1]);
                    }
                }
                else {
                    for(int k = j; k < right; k++) {
                        count++;
                        swap(s[k], s[k + 1]);
                    }
                }
            }
        }
        
        return count;
    }
};
